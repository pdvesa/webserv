server { 
hostname 127.0.0.1
port 8080
server_name alpaca_lama
error_page 404 405 /www/error/general.html
client_max_body_size 2

location / {
    methods GET DELETE POST
    listing on
    index index.html
    root /www/
    upload_dir upload
}

location /home/ {
    methods GET DELETE
    listing on
    index index.html
    root /www/
}}

