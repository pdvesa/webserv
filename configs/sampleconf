server { 
hostname 127.0.0.1
port 8080
error_page 404 405 /www/error/general.html
client_max_body_size 8000

location / {
    methods GET 
    listing on
    index index.html
    root /www/
}

location /redir/ {
	return 301 /home/
}
location /google/ {
	return 301 http://www.google.com
}
location /home/ {
    methods GET 
    listing on
    index index.html
    root /www/
}
location /cgi-bin/ {
    methods GET DELETE POST
    listing on
    root /www/cgi-bin/
}
location /posting/ {
    methods GET POST DELETE
    listing on
    root /www/posting/
    upload_dir upload
}}


server { 
hostname 127.0.0.1
port 8081
server_name lama
error_page 404 405 /www/error/general.html
client_max_body_size 2

location / {
    methods GET 
    listing on
    index index.html
    root /root2/
}

location /redir/ {
	return 301 /home/
}
location /google/ {
	return 301 http://www.google.com
}
location /home/ {
    methods GET 
    listing on
    index index.html
    root /root2/
}
location /cgi-bin/ {
    methods GET DELETE POST
    listing on
    root /root2/cgi-bin/
}
location /posting/ {
    methods GET POST DELETE
    listing on
    root /root2/posting/
    upload_dir upload
}}
