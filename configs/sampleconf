server { 
hostname 127.0.0.1
port 8080
server_name alpaca_lama
error_page 404 405 /www/error/general.html
client_max_body_size 2

location / {
    methods GET 
    listing on
    index index.html
    root /www/
}

location /redir/ {
	return 301 /home/
}
location /google/ {
	return 301 http://www.google.com
}
location /home/ {
    methods GET 
    listing on
    index index.html
    root /www/
}
location /testing/ {
    methods GET DELETE
    listing on
    index index.html
    root /www/testing/
}
location /posting/ {
    methods GET POST DELETE
    listing on
    index index.html
    root /www/posting/
    upload_dir upload
}}
